@using JobSearchFullWebSite.ViewModels
@model CandidateAndEmployerLoginModel
@{
    ViewData["Title"] = "Login";
}

<main>
    <br />
    <br />
    <br />
    <div class="container mt-5">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <h4><b>Giriş</b></h4>
            <form class="d-flex flex-column w-50" asp-action="login" asp-controller="account">
                <label asp-for="@Model.UserName">İstifadəçi adı</label>
                <input type="text" asp-for="@Model.UserName"
                       class="backColorBlue border-radius border-0 p-3"
                       placeholder="İstifadəçi adı və ya email" />
                <br />
                <br />
                <label asp-for="@Model.Password">Şifrə</label>
                <input type="password" asp-for="@Model.Password"
                       class="backColorBlue border-radius border-0 p-3"
                       placeholder="Şifrəniz..." />
                <br />
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <br />
                <div class="">
                    <button class="btn btn-primary mt-3 py-2 " type="submit">Giriş edin</button>

                </div>
            </form>
            <br />
            <div class="mt-3"> <span class="grey">Hesabınız Yoxdur?</span>&nbsp;&nbsp;<a asp-action="candidateregister">Qeydiyyatdan keçin</a></div>
        </div>
    </div>
    <br />
    <br />
    <br />
</main>
    

