        <div class="row g-4">
            @foreach (var item in Model.Employers)
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="card EmployerListCard py-3">
                        <div class="container">
                            <div class="FeaturedBookmark row">
                                @if (item.IsFeatured)
                                {
