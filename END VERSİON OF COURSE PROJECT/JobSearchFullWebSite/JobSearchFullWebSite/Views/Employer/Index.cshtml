                    EmployerListCardImageContent
                    d-flex
                    flex-column
                    align-items-center
                    justify-content-center
                  ">
                                <div class="EmployerListCardImage">
                                    @if (item.EmployerImages.FirstOrDefault(x => x.IsPoster) != null)
                                    {
