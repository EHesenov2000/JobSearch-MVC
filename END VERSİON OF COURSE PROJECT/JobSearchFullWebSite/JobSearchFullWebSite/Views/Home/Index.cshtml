                                    {
                                        <img src="~/images/candidateImage/@item.CandidateImages.FirstOrDefault(x=>x.IsPoster).Image"
                                             alt=""
                                             style="width: 80px; height: 80px; border-radius: 50%"
                                             class="d-flex justify-content-center" />
                                    }
