@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobSearchFullWebSite.Models
@model About
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="@Model.ActiveUsers">Aktiv istifadəçilər</label>
                <input asp-for="@Model.ActiveUsers" class="form-control" id="ActiveUsers" placeholder="Aktivlər">
                <span asp-validation-for="@Model.ActiveUsers" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="@Model.Positions">Vəzifələr</label>
                <input asp-for="@Model.Positions" class="form-control" id="Positions" placeholder="Vəzifələr">
                <span asp-validation-for="@Model.Positions" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="@Model.Shared">Paylaşıldı</label>
                <input asp-for="@Model.Shared" class="form-control" id="Shared" placeholder="Paylaşıldı">
                <span asp-validation-for="@Model.Shared" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.AboutContentTextEditor">Ümumi təsvir</label>
                <textarea asp-for="@Model.AboutContentTextEditor" class="form-control AboutContentTextEditor" id="AboutContentTextEditor" placeholder="Haqqında"></textarea>
                <span asp-validation-for="@Model.AboutContentTextEditor" class="text-danger"></span>
            </div>

        </div>
        <br />
        <br />
        <div class="form-row">
            <div class="form-group col-md-12 d-flex flex-column">
                <label asp-for="@Model.AboutTopImage">Haqqında səhifə şəkilləri</label>
                <input asp-for="@Model.AboutTopImage" />
                <span asp-validation-for="@Model.AboutTopImage" class="text-danger"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-row">
            <button type="submit" class="btn btn-primary">Yarat</button>
        </div>
    </form>

</div>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<script>
    // Replace the <textarea id="editor1"> with a CKEditor 4
    // instance, using default configuration.
    CKEDITOR.replace('AboutContentTextEditor');
</script>