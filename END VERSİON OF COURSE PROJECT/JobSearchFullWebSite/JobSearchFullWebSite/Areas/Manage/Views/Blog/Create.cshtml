@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobSearchFullWebSite.Models
@model BlogItem
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Title">Başlıq</label>
                <input asp-for="@Model.Title" class="form-control" id="Title" placeholder="Başlıq..">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.Subject">Mövzu</label>
                <input asp-for="@Model.Subject" class="form-control" id="Subject" placeholder="Mövzu..">
                <span asp-validation-for="@Model.Subject" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.BackBlueTextHead">Fərqləndirilən hissə başlığı</label>
                <input asp-for="@Model.BackBlueTextHead" class="form-control" id="BackBlueTextHead" placeholder="Fərqləndirilən başlıq..">
                <span asp-validation-for="@Model.BackBlueTextHead" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.BackBlueTextFoot">Fərqləndirilən hissə kontenti</label>
                <input asp-for="@Model.BackBlueTextFoot" class="form-control" id="BackBlueTextFoot" placeholder="Fərqləndirilən kontent..">
                <span asp-validation-for="@Model.BackBlueTextFoot" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.ContainerImageFile">Orta şəkil</label>
                <input asp-for="@Model.ContainerImageFile" class="form-control" id="ContainerImageFile" placeholder="Orta şəkil..">
                <span asp-validation-for="@Model.ContainerImageFile" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.FullImageFile">Tam səhifə şəkli</label>
                <input asp-for="@Model.FullImageFile" class="form-control" id="FullImageFile" placeholder="Tam səhifə..">
                <span asp-validation-for="@Model.FullImageFile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12"  >
                <label asp-for="@Model.DescriptionTextEditor">Ümumi təsvir</label>
                <textarea asp-for="@Model.DescriptionTextEditor" class="form-control" id="ContainerImageFile" placeholder="Haqqında.."></textarea>
                <span asp-validation-for="@Model.DescriptionTextEditor" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <br />
        <div class="form-row">
            <button type="submit" class="btn btn-primary">Yarat</button>
        </div>
    </form>

</div>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<script>
        // Replace the <textarea id="editor1"> with a CKEditor 4
        // instance, using default configuration.
    CKEDITOR.replace('DescriptionTextEditor');
</script>
