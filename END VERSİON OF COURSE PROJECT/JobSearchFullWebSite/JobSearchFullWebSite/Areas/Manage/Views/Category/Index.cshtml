@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobSearchFullWebSite.Models
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row d-flex  mb-2">
        <div class="col-md-1 m-3">
            <a asp-action="create" asp-controller="category" class="d-flex m-3" style="text-decoration:none;">
                <button class="backendButton  mr--30" style=" border-radius: 20px; color: white; background-image: linear-gradient(to right,blue,red); font: bold; ">Yarat</button>
            </a>
        </div>
    </div>
    <br />
    <br />
    <div class="d-flex flex-row">
        <form method="post">
            <div style="background-color:#cce4f7;" class="
                    SearchIcon
                    d-flex
                    flex-row

                    border-radius
                    py-2
                    px-2
                  ">
                <button type="submit" class="border-0" style="background-color:#cce4f7;"><i class="fas fa-search d-flex flex-row align-items-center grey"></i></button>
                <input style="background-color:#cce4f7;" type="text" name="search"
                       placeholder="Axtarış.."
                       class="border-0  border-radius onclickBorderNone" />
            </div>

        </form>

    </div>
    <br />
    <table class="table table-bordered">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-5">Adı</th>
                <th class="col-md-3">Şirkət sayı</th>
                <th class="col-md-3"></th>
            </tr>
        </thead>
        <tbody>
            @{ int count = 0;
                @foreach (var item in Model)
                {
                    count++;
                    <tr class="row">
                        <td class="col-md-1">@count</td>
                        <td class="col-md-5">@item.Name</td>
                        <td class="col-md-3">@item.Employers.Count()</td>
                        <td class="col-md-3 d-flex flex-row justify-content-center">
                            <a class="btn btn-warning" asp-action="edit" asp-controller="category" asp-route-id="@item.Id">Yenilə</a>
                            &nbsp;
                            @*<a class="btn btn-info delete-btn" asp-action="delete" asp-controller="category" asp-route-id="@item.Id">Delete</a>*@
                        </td>
                    </tr>
                }}
        </tbody>
    </table>
</div>
<style>
    .backendButton:hover {
        background-image: linear-gradient(to right,red,blue) !important;
    }
</style>
