@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobSearchFullWebSite.Models
@model Testimonial
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-4 d-flex flex-column">
                <label asp-for="@Model.Name">Ad</label>
                <input asp-for="@Model.Name" placeholder="Ad.."/>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 d-flex flex-column">
                <label asp-for="@Model.Position">Vəzifə</label>
                <input asp-for="@Model.Position" placeholder="Vəzifə.." />
                <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 d-flex flex-column">
                <label asp-for="@Model.BlueText">Fərqləndirilən hissə</label>
                <input asp-for="@Model.BlueText" placeholder="Fərqləndirilən hissə.."/>
                <span asp-validation-for="@Model.BlueText" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12 d-flex flex-column">
                <label asp-for="@Model.Content">Kontent</label>
                <input asp-for="@Model.Content" placeholder="Kontent.."/>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 d-flex flex-column">
                    <label asp-for="@Model.TestimonialImage">Şəkil</label>
                    <input asp-for="@Model.TestimonialImage" />
                    <span asp-validation-for="@Model.TestimonialImage" class="text-danger"></span>
            </div>
         </div>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-row">
                <button type="submit" class="btn btn-primary">Yarat</button>
            </div>
</form>

</div>
